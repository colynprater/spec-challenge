%p#notice= notice

%h1 Listing posts

= link_to 'Sort by title', posts_path(sort_by: 'title', sort_order: @sort_order)
= link_to 'Sort by description', posts_path(sort_by: 'description', sort_order: @sort_order)
= link_to 'Sort by body', posts_path

%table
  %thead
    %tr
      %th Title
      %th Description
      %th Body
      %th
      %th
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.description
        %td= post.body
        %td= link_to 'Show', post
        %td= link_to 'Edit', edit_post_path(post)
        %td= link_to 'Destroy', post, method: :delete

%br

= link_to 'New Post', new_post_path
